{
  "private": true,
  "scripts": {
    "build": "pnpm run -r build",
    "docs": "ln -s ../packages/framework/dist docs; sirv docs --dev --cors",
    "lint": "pnpm run lint:css && pnpm run lint:js && pnpm run lint:ts",
    "lint:css": "echo 'TODO: CSS linting'; exit 0",
    "lint:js": "eslint --ignore-path .gitignore --ext .cjs,.js,.jsx,.mjs,.ts,.tsx .",
    "lint:ts": "tsc --project ./tsconfig.lint.json --noEmit",
    "test": "c8 uvu -r esbuild-register packages '\\/test\\/.+\\.test\\.ts$'",
    "test-nn": "uvu packages '\\/test\\/.+\\.test-nn\\.js$'",
    "test-oldnode": "uvu -r esbuild-register packages '\\/test\\/.+\\.test\\.ts$'"
  },
  "devDependencies": {
    "@types/node": "16.3.3",
    "@typescript-eslint/eslint-plugin": "4.28.4",
    "@typescript-eslint/parser": "4.28.4",
    "c8": "7.7.3",
    "esbuild": "0.12.15",
    "esbuild-register": "2.6.0",
    "eslint": "7.32.0",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-unicorn": "34.0.1",
    "prettier": "2.3.2",
    "prettier-plugin-pkg": "0.10.0",
    "prettier-plugin-sh": "0.7.1",
    "sirv-cli": "1.0.12",
    "typescript": "4.3.5",
    "uvu": "0.5.1"
  },
  "c8": {
    "all": true,
    "include": [
      "packages/*/src",
      "packages/cli"
    ],
    "reporter": [
      "text",
      "lcovonly"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "all",
    "plugins": [
      "./node_modules/prettier-plugin-pkg",
      "./node_modules/prettier-plugin-sh"
    ]
  }
}
