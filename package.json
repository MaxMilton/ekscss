{
  "name": "@ekscss/monorepo",
  "private": true,
  "scripts": {
    "build": "pnpm run -r build",
    "docs": "ln -s ../packages/framework/dist docs; sirv docs --dev --cors",
    "lint": "pnpm run lint:css && pnpm run lint:js && pnpm run lint:ts",
    "lint:css": "echo 'TODO: CSS linting'; exit 0",
    "lint:js": "eslint --ignore-path .gitignore --ext .ts,.tsx,.js,.jsx,.mjs,.cjs .",
    "lint:ts": "tsc --noEmit",
    "test": "c8 uvu -r esbuild-register packages '\\/test\\/.+\\.test\\.ts$'",
    "test-oldnode": "uvu -r esbuild-register packages '\\/test\\/.+\\.test\\.ts$'",
    "test-nn": "uvu packages '\\/test\\/.+\\.test-nn\\.js$'"
  },
  "devDependencies": {
    "@types/node": "15.6.0",
    "@typescript-eslint/eslint-plugin": "4.24.0",
    "@typescript-eslint/parser": "4.24.0",
    "c8": "7.7.2",
    "esbuild": "0.12.1",
    "esbuild-register": "2.5.0",
    "eslint": "7.27.0",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-plugin-import": "2.23.3",
    "prettier": "2.3.0",
    "prettier-plugin-pkg": "0.9.0",
    "prettier-plugin-sh": "0.6.1",
    "sirv-cli": "1.0.11",
    "typescript": "4.2.4",
    "uvu": "0.5.1"
  },
  "c8": {
    "all": true,
    "include": [
      "packages/*/src",
      "packages/cli"
    ],
    "reporter": [
      "text",
      "lcovonly"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "all",
    "overrides": [
      {
        "files": [
          "*.yml",
          "*.yaml"
        ],
        "options": {
          "singleQuote": false
        }
      }
    ]
  }
}
