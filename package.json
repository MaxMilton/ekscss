{
  "name": "@ekscss/monorepo",
  "private": true,
  "scripts": {
    "__REMOVE__docs-link": "echo 'FIXME: Link microdoc files'",
    "build": "yarn build --verbose",
    "rebuild": "yarn build --verbose --ignore-cache",
    "lint": "yarn lint:css && yarn lint:js && yarn lint:ts",
    "lint:css": "echo 'TODO: CSS linting'; exit 0",
    "lint:js": "eslint --ignore-path .gitignore --ext .ts,.tsx,.js,.jsx,.mjs,.cjs .",
    "lint:ts": "tsc --noEmit",
    "test": "echo 'TODO: Testing'; exit 0"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "14.14.37",
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "eslint": "7.24.0",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-plugin-import": "2.22.1",
    "prettier": "2.2.1",
    "prettier-plugin-package2": "0.5.2",
    "typescript": "4.2.4"
  },
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "all"
  },
  "renovate": {
    "extends": [
      "@wearegenki"
    ]
  }
}
