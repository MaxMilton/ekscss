{
  "private": true,
  "scripts": {
    "build": "pnpm run -r build",
    "docs": "ln -s ../packages/framework/dist docs; sirv docs --dev --cors",
    "lint": "pnpm run lint:css && pnpm run lint:js && pnpm run lint:ts",
    "lint:css": "echo 'TODO: CSS linting'; exit 0",
    "lint:js": "eslint --ignore-path .gitignore --ext .cjs,.js,.jsx,.mjs,.ts,.tsx .",
    "lint:ts": "tsc --project ./tsconfig.lint.json --noEmit",
    "test": "c8 uvu -r esbuild-register packages '\\/test\\/.+\\.test\\.ts$'",
    "test-nn": "uvu packages '\\/test\\/.+\\.test-nn\\.js$'",
    "test-oldnode": "uvu -r esbuild-register packages '\\/test\\/.+\\.test\\.ts$'"
  },
  "devDependencies": {
    "@types/node": "15.12.1",
    "@typescript-eslint/eslint-plugin": "4.26.1",
    "@typescript-eslint/parser": "4.26.1",
    "c8": "7.7.2",
    "esbuild": "0.12.6",
    "esbuild-register": "2.5.0",
    "eslint": "7.28.0",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-plugin-import": "2.23.4",
    "prettier": "2.3.1",
    "prettier-plugin-pkg": "0.9.0",
    "prettier-plugin-sh": "0.6.1",
    "sirv-cli": "1.0.12",
    "typescript": "4.3.2",
    "uvu": "0.5.1"
  },
  "c8": {
    "all": true,
    "include": [
      "packages/*/src",
      "packages/cli"
    ],
    "reporter": [
      "text",
      "lcovonly"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "all",
    "plugins": [
      "./node_modules/prettier-plugin-pkg",
      "./node_modules/prettier-plugin-sh"
    ]
  }
}
