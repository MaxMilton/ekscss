{
  "name": "@ekscss/monorepo",
  "private": true,
  "scripts": {
    "docs": "ln -s ../packages/framework/dist docs; sirv docs --dev --cors",
    "build": "yarn build",
    "rebuild": "yarn build --ignore-cache",
    "lint": "yarn lint:css && yarn lint:js && yarn lint:ts",
    "lint:css": "echo 'TODO: CSS linting'; exit 0",
    "lint:js": "eslint --ignore-path .gitignore --ext .ts,.tsx,.js,.jsx,.mjs,.cjs .",
    "lint:ts": "tsc --noEmit",
    "test": "echo 'TODO: Testing'; exit 0"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "15.0.2",
    "@typescript-eslint/eslint-plugin": "4.22.1",
    "@typescript-eslint/parser": "4.22.1",
    "eslint": "7.26.0",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-plugin-import": "2.22.1",
    "prettier": "2.3.0",
    "prettier-plugin-package2": "0.6.0",
    "sirv-cli": "1.0.11",
    "typescript": "4.2.4"
  },
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "all",
    "overrides": [
      {
        "files": [
          "*.yml"
        ],
        "options": {
          "singleQuote": false
        }
      }
    ]
  }
}
