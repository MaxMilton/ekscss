{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node", // TODO: Use "bundler" once typescript-eslint can handle monorepos better
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,

    "declaration": true,
    "sourceMap": true,

    "strict": true,
    "allowUnreachableCode": false,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": false, // covered by eslint
    "noImplicitOverride": true,
    "noUnusedLocals": false, // covered by eslint
    "noUnusedParameters": false, // covered by eslint
    "verbatimModuleSyntax": true
  },
  "exclude": [
    "**/dist",
    "**/node_modules",
    "**/test",
    "**/build.mjs",
    "coverage"
  ]
}
