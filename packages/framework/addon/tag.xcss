/**
 * TAGS
 *
 * @format
 */

.tag {
  display: inline-block;
  padding: ${x.tag.padding};
  color: ${x.tag.textColor};
  font-size: ${x.tag.textSize};
  background-color: ${x.tag.backgroundColor};
  border-radius: ${x.tag.borderRadius};
}

/* Whitespace between tags */

.tag + .tag {
  margin-left: ${x.tag.marginBetween};
}
